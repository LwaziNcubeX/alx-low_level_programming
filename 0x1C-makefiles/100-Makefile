CC = gcc
SRC = main.c school.c
OBJ = $(notdir $(SRC:.c=.o))
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM := rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c -o main.o

school.o: school.c m.h
	$(CC) $(CFLAGS) -c school.c -o school.o

clean:
	$(RM) $(NAME)
	$(RM) $(OBJ)
	$(RM) *~ \#*\#

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
