CC = gcc
SRC = main.c school.c
OBJ = $(notdir $(SRC:.c=.o))
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
RM := rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(NAME) *~ \#*\#

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
